function DecHex (i:byte; v:longint):string;
const BORDER = $00010000;
var s:string;
begin
  s := concat ('[', i2s (v), ' / ');
  if (p^ [i].FSize < BORDER) and (v < BORDER) then
    s := concat (s, hexword (v))
  else
    s := concat (s, hexlong (v));
  DecHex := concat (s, 'h]');
end;

