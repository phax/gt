procedure CheckEXEHeader;
var i:byte;
    ID:array[1..2] of word;
label DOSEXE;
begin
  bCOM := true;

  for i:=1 to nOpenFiles do
  begin
    xblockread (i, p^ [i].EXEHeader, EXE_HEADER_SIZE, dummy);

    if p^ [i].EXEHeader.IsEXE then
    begin
      if (bCOM) and (i > 1) then
        Error (concat (p^ [i].FName, ' is an EXE file; previous file was a COM file.'));
      bCOM := false;
    end
    else
    begin
      if (not bCOM) and (i > 1) then
        Error (concat (p^ [i].FName, ' is a COM file; previous file was an EXE file.'));
    end;

    if (not bCOM) and (p^ [i].EXEHeader.NEOffsetIsValid) then
    begin
      xseek (i, $3C);
      xblockread (i, p^ [i].NE_Offset, 2, dummy);

      if (p^ [i].NE_Offset < p^ [i].exeheader.GetHeaderSize) then
        goto DOSEXE;

      xseek (i, p^ [i].NE_Offset);
      xblockread (i, p^ [i].PE_IFH, SIZEOF_PE_IMAGE_FILE_HEADER, dummy);
      xblockread (i, p^ [i].PE_OFH, SIZEOF_PE_OPTIONAL_FILE_HEADER, dummy);

      move (p^ [i].PE_IFH.ID, ID, 4);
      if (ID[1] <> $4550) or (ID[2] <> $0000) then
      begin
        if (ID[1] = $454E) or (ID[1] = $454C) then
          Error (concat (p^ [i].FName, ' is a new executable'))
        else
          if (ID[1] = $584C) then
            Error (concat (p^ [i].FName, ' is a linear executable'))
          else
            goto DOSEXE;
      end
      else
      begin
        if (not bPE) and (i > 1) then
          Error (concat (p^ [i].FName, ' is a new executable.'));
        bPE := true;
{$ifdef XOUT}
        FPExtName (i, 'is a PE portable executable');
{$endif}
      end;
    end
    else
    begin
DOSEXE:
      if bPE then
        Error (concat (p^ [i].FName, ' is no portable executable'));

      p^ [i].NE_Offset := 0;
{$ifdef XOUT}
      if (not bCOM) then
        FPExtName (i, 'is a DOS executable')
      else
        FPExtName (i, 'handled as a normal file');
{$endif}
    end;
  end;

{$ifdef XOUT}
  FPExt (SEPERATOR);
{$endif}
end;

procedure SearchStartPos;
label FoundPos;
var i:byte;
    nPos, nRVA:longint;
    nSeg, nOfs:word;

    function EvaluateMacro (i:byte;
                            nStartPos:longint):longint;
    var len, p:byte;

        function GetNumber:Str10;
        var j:byte;
        begin
          j := p - 1;
          while IsNumberChar (sMacro [j + 1]) do
            inc (j);
          GetNumber := copy (sMacro, p, j - p + 1);
        end;

    var s:Str10;
        nSkip:longint;
    begin
      p := 1;
      len := length (sMacro);

{$ifdef XOUT}
      FPExtName (i, concat ('evaluating macro commands ', Quoted (sMacro),
                        ' at ',  DecHex (i, nStartPos), ':'));
{$endif}

      while (p <= len) do
      begin
        case sMacro[p] of
          '0'..'9':
              begin
                s := GetNumber;
                inc (p, length (s) - 1);

                nSkip := s2i (s);
                inc (nStartPos, nSkip);
{$ifdef XOUT}
                FPExt (concat (' - Skipping ', i2s (nSkip), ' byte(s) - now at ', DecHex (i, nStartPos)));
{$endif}
              end;
          'c':begin
                if bCOM then
                  Error ('Long call macro ("c") is not available for COM files.');
                nStartPos := Command_LONGCALL (i, nStartPos);
              end;
          'f':nStartPos := Command_JMP_FAR (i, nStartPos);
          'j':nStartPos := Command_JMP (i, nStartPos, 1);
          'k':nStartPos := Command_JMP32 (i, nStartPos, 1);
          'm':nStartPos := Command_MOV_JMP (i, nStartPos);
          '_':;  { just do nothing }
        else
          Error (concat ('Cannot evaluate this macro. ',
                         'Error at pos ', i2s (p), ' ', Quoted (sMacro[p]), '.'));
        end;
        inc (p);
      end;
      EvaluateMacro := nStartPos;
    end;

    procedure GetPEEntryPoint (    i:byte;
                               var nRes:longint;
                               var nRVA:longint);
    var aOTH:PEObjectTableHandler;
    begin
      aOTH.init (p^ [i].PE_IFH.NumberOfSections);
      xseek (i, p^ [i].NE_Offset +
                SIZEOF_PE_IMAGE_FILE_HEADER +
                p^ [i].PE_IFH.OptionalHeaderSize);
      xblockread (i, aOTH.pBase^, aOTH.nTableSize, dummy);

      nRVA := p^ [i].PE_OFH.AddressOfEntryPoint;
      aOTH.GetPhysOfsByRVA (nRVA, nRes);

      aOTH.done;
    end;

begin
  for i:=1 to nOpenFiles do
  begin
{ - check for new start position - }
    if bSwitch [_GOTO] then
    begin
      nPos := nStart;
      if (nPos > p^ [i].FSize) then
        Error (concat ('The start position ', i2s (nStart),
                       ' exceeds the filesize of ', p^ [i].FName));
      goto FoundPos;
    end;

{ - check for going to the EOF - }
    if bSwitch [_END] then
    begin
      nPos := p^ [i].FSize - nEOF;
      if (nPos < 0) then
        Error (concat ('The position EOF - ', i2s (nEOF),
                       ' bytes exceeds the filesize of ', p^ [i].FName));
{$ifdef XOUT}
      FPExtName (i, concat ('going to EOF - ', i2s (nEOF), ' bytes = ', DecHex (i, nPos)));
{$endif}
      goto FoundPos;
    end;

{ set nPos to the starting position }
    if (not bCOM) and (not bPE) then
    begin
      nPos := p^ [i].EXEHeader.GetAbsoluteIP;  { goto CS:IP }
      nSeg := p^ [i].EXEHeader.CS;
      nOfs := p^ [i].EXEHeader.IP;
{$ifdef XOUT}
      FPExtName (i, concat ('original CS:IP = ', GetAddress (nSeg, nOfs),
                            ' ð ', DecHex (i, nPos)));
{$endif}
    end
    else
      nPos := 0;

{ - PE EXE handling - }
    if bPE then
    begin
      GetPEEntryPoint (i, nPos, nRVA);

{$ifdef XOUT}
      FPExtName (i, concat ('Entrypoint = ', DecHex (i, nPos), '; RVA = ', DecHex (i, nRVA)));
{$endif}

      if (nPos > p^ [i].FSize) then
        Error (concat ('PE entrypoint exceeds filesize of ', p^ [i].FName));

      if bSwitch [_SETCS] then
      begin
{$ifdef XOUT}
        FPExt (concat ('Disabling switch /', Commands [_SETCS].switch, ' because of PE EXE'));
{$endif}
        bSwitch [_SETCS] := false;
      end;
    end;

{ check for changed CS or IP }
    if bSwitch [_SETCS] or
       bSwitch [_ADDCS] or
       bSwitch [_SETIP] or
       bSwitch [_ADDIP] then
    begin
      if not bCOM then
      begin
{ - if (PE) EXE file compare - reset position!! - }
        nPos := p^ [i].EXEHeader.GetHeaderSize;

{$ifdef XOUT}
        FPExtName (i, concat ('starting at pos ', DecHex (i, nPos)));
{$endif}

{ - check if CS is changed - }
        if (bSwitch [_SETCS]) then
        begin
{ - instead of adding the std CS, add the new one - }
          inc (nPos, nCS);
{$ifdef XOUT}
          FPExtName (i, concat ('setting CS to ', i2s (nCS), ' - now at ', DecHex (i, nPos)));
{$endif}
        end
        else
        begin
{ - add std CS - }
          inc (nPos, p^ [i].EXEHeader.GetCS);

{ - check if something is added to CS - }
          if (bSwitch [_ADDCS]) then
          begin
            inc (nPos, nCS);
{$ifdef XOUT}
            FPExtName (i, concat ('adding ', i2s (nCS), ' to CS - now at ', DecHex (i, nPos)));
{$endif}
          end;
        end;

{ check if IP is changed }
        if (bSwitch [_SETIP]) then
        begin
{ - instead of adding the std IP, add the new one - }
          inc (nPos, nIP);
{$ifdef XOUT}
          FPExtName (i, concat ('setting IP to ', i2s (nIP),
                                ' - now at ', DecHex (i, nPos)));
{$endif}
        end
        else
        begin
{ - add std IP - }
          inc (nPos, p^ [i].EXEHeader.GetIP);

          if (bSwitch [_ADDIP]) then
          begin
            inc (nPos, nIP);
{$ifdef XOUT}
            FPExtName (i, concat ('adding ', i2s (nIP),
                                  ' to IP - now at ', DecHex (i, nPos)));
{$endif}
          end;
        end;

      end
      else
{
  COM file compare
  can only be /I
  /C, /ACS, /AIP is "disabled" in cmdline handling
}
        if (bSwitch [_SETIP]) then
        begin
          nPos := nIP;  { - before, nPos was 0! - }

          if (nPos > p^ [i].FSize) then
            Error (concat ('The new IP of ', i2s (nIP),
                           ' exceeds the filesize of ', p^ [i].FName));

{$ifdef XOUT}
          FPExtName (i, concat ('Start IP = ', DecHex (i, nPos)));
{$endif}
        end;
    end;  { end CS, IP modify }

    if bSwitch [_MACRO] then
      nPos := EvaluateMacro (i, nPos);

FoundPos:
{$ifdef XOUT}
    FPExtName (i, concat ('start comparing at ', DecHex (i, nPos)));
{$endif}
    xseek (i, nPos);
{ - calculate the number of bytes to compare without respect to /STOPB - }
    p^ [i].nTotalCompare := FileSize (p^ [i].f) - FilePos (p^ [i].f);

{$ifdef XOUT}
    FPExt (SEPERATOR);
{$endif}
  end;
end;

procedure OpenPascalFile;
begin
{ - open file for writing - }
  FileMode := FILEMODE_WRITE;

{ create pascal include file }
  assign (fout, OUT_FILENAME);

{ - check if it already exists - }
  reset (fout);
  if (ioresult = 0) and (not bSwitch [_OVER]) then
    Error (concat ('The output file ', OUT_FILENAME, ' already exists.'));

{ - does not exist - create a new one - }
  rewrite (fout);
  CheckIOError (ioresult, OUT_FILENAME);
  write (fout, EINRUECKEN);

  PASCAL_OPENED := true;
end;

