function IsJump (b:byte):boolean;
{$ifdef FPC}
begin
  IsJump := (b in [$E3, $E8, $E9, $EB]);
end;
{$else}
assembler;
asm
  mov al, 1
  mov bl, b
  cmp b, $E3  { jcxz }
  je  @done
  cmp b, $E8  { call }
  je  @done
  cmp b, $E9  { jmp }
  je  @done
  cmp b, $EB  { jmps }
  je  @done
  xor al, al
@done:
end;
{$endif}

